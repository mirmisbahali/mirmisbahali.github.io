---
layout: base.njk
title: blog
---

<div
  class="
    container
    my-5
    d-flex
    flex-column
    justify-content-center
    align-items-center
  "
>
  <div class="row">
    {% for article in sanity %}
    <div class="col-sm-6 col-md-4 my-3 d-flex justify-content-center align-items-center">
      <div class="card" style="width: 18rem">
        <img
          class="card-img-top"
          src="{{ article.imgURL }}"
          alt="{{ article.imgAlt }}"
        />
        <div class="card-body">
          <h5 class="card-title">{{ article.title }}</h5>
          <p class="card-text">{{ article.excerpt }}</p>
          <a href="/{{ article.slug }}" class="btn btn-primary">Read More</a>
        </div>
      </div>
    </div>
    {% endfor %}
  </div>
</div>
