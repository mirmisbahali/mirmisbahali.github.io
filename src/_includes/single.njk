{% extends "base.njk" %}

{% block content %}

<div class="container text-center my-5">
    <img src="{{ image }}" class="img-fluid mx-auto w-25" alt="">
    <div class="my-5 px-4 text-start">
        <h1 class="display-5">{{ title }}</h1>
        <article class="my-5">
            {{ content | safe }}
        </article>
    </div>
</div>

<script>
    const imgs = document.querySelectorAll('img');

    imgs.forEach(img => {
        img.parentNode.classList.add('text-center')
        img.parentNode.classList.add('my-2')
        img.classList.add('w-50')
    })

</script>
{% endblock content %}